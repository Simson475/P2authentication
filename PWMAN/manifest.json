{
    "manifest_version": 2,
    "name": "Password Manager",
    "version": "1.0.3",
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["/Scripts/content.js"]
    }],
    "browser_action": {
        "default_icon": "/Images/PWMLogo.png",
        "default_popup": "/HTML/popup.html",
        "default_title": "PW MAN"
    },
    "background": {
        "scripts": ["/scripts/background.js"]
    },
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "cookies"]
}